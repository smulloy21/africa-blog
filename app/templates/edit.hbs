<div class="row">
  <div class="col-xs-8">
    <h3 class="title"><big>{{model.title}}</big><br><small>{{model.location}}</small></h3>
  </div>
  <div class="col-xs-4 text-right">
    <h3 class="title"><small>{{moment-format model.date 'dddd'}} {{moment-format model.date 'MMM Do[,] YYYY'}}</small></h3>
  </div>
</div>
<div class='row'>
  <div class="col-xs-10 col-xs-offset-1">
    <br>
    <p>{{model.description}}</p><br>
  </div>
</div>
{{edit-day model=model update='update' delete='delete'}}
<br>
{{#each model.photos as |photo|}}
  <div class="row">
    <div class="col-xs-5 photo-tile-container">
      <div style="background:url({{photo.image}}) center center no-repeat; border-radius: 5px; background-size: cover; height: 300px;">
      </div>
    </div>
    <div class="col-xs-7">
      <div class="text-right">
        <p>{{moment-format photo.timestamp 'h:mm a'}}</p>
      </div>
      <br>
      <div style="padding: 15px;">
        <p>{{photo.text}}</p>
      </div>
    </div>
  </div>
  <br>
{{/each}}
{{add-photo model=model addPhoto='addPhoto'}}
<h3>Comments</h3>
{{#each model.comments as |comment|}}
<div class="row" style="padding: 5px">
  <div class="col-xs-2">
    <p>{{comment.username}}:</p>
  </div>
  <div class="col-xs-10">
    <p>{{comment.text}}</p>
  </div>
</div>
{{/each}}
{{add-comment model=model addComment='addComment'}}
