{{#if form}}
  <div class="row">
    <div class="col-xs-8">
      <h3 class="title"><big>{{model.title}}</big><br><small>{{model.location}}</small></h3>
    </div>
    <div class="col-xs-4 text-right">
      <h3 class="title"><small>{{moment-format model.date 'dddd'}} {{moment-format model.date 'MMM Do[,] YYYY'}}</small></h3>
    </div>
  </div>
  <div class='row'>
    <div class="col-xs-10 col-xs-offset-1">
      <br>
      <p>{{model.description}}</p><br>
    </div>
  </div>
  <div class="row">
    <form class="" action="index.html" method="post">
      <div class="form-group row">
        <div class="col-xs-4">
          <label for="month">Month</label>
          {{input value=month id="month" class="form-control"}}
        </div>
        <div class="col-xs-4">
          <label for="date">Date</label>
          {{input value=date id="date" class="form-control"}}
        </div>
        <div class="col-xs-4">
          <label for="year">Year</label>
          {{input value=year id="year" class="form-control"}}
        </div>
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        {{textarea value=description id="description" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="location">Location</label>
        {{input value=location id="location" class="form-control"}}
      </div>
      <button class="btn btn-primary" {{action 'update'}}>Update</button>
      <button class="btn btn-default" {{action 'hideForm'}}>Cancel</button>
      <button class="btn btn-danger" style="float: right;" {{action 'delete'}}>Delete Day</button>
    </form>
  </div>
{{else}}
<div class="row">
  <div class="col-xs-8">
    <h3 class="title"><big>{{model.title}}</big><br><small>{{model.location}}</small></h3>
  </div>
  <div class="col-xs-4 text-right">
    <h3 class="title"><small>{{moment-format model.date 'dddd'}} {{moment-format model.date 'MMM Do[,] YYYY'}}</small></h3>
    <button class="btn btn-default" {{action 'showForm'}}>Edit day</button>
  </div>
</div>
<div class='row'>
  <div class="col-xs-10 col-xs-offset-1">
    <br>
    <p>{{model.description}}</p><br>
  </div>
</div>
{{/if}}
